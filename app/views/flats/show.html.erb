<img src= <%= @flat.picture_url %> style= "width:100%; height: 400px; object-fit:cover;" class="mb-4 rounded">

<h1 class="mb-3"><%= @flat.name %></h1>
<p>Address: <%= @flat.address %></p>
<p>Price: <%= @flat.price_per_night %> JPY per night</p>
<p>Capacity: <%= pluralize(@flat.number_of_guests, 'person') %></p>
<p>Lat: <%= @flat.latitude %></p>
<p>Lon: <%= @flat.longitude %></p>

<div id="map" style="height: 300px; width: 600px"></div>
