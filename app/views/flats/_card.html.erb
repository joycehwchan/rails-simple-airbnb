<div class="col-12 col-md-6 col-lg-4 mb-3">
  <div class="card">
    <img src= <%= flat.picture_url %>
         class="card-img-top"
         alt="<%= flat.name %>"
         style="height: 200px; object-fit:cover;">
    <div class="card-body">
      <h5 class="card-title"><%= flat.name %></h5>
      <p class="card-text"><%= flat.description %></p>
      <p class="card-text">
        <%= pluralize(flat.number_of_guests, 'person') %>,
        <%= number_to_currency(flat.price_per_night, unit: "JPY", separator: ",", delimiter: "", format: "%n%u") %>
      </p>
      <%= link_to 'See Flat', flat_path(flat), class: 'text-primary me-2' %>
      <%= link_to 'Edit Flat', edit_flat_path(flat), class: 'text-warning me-2' %>
      <%= link_to 'Delete Flat', flat_path(flat), data: { turbo_method: 'delete', turbo_confirm: "Delete #{flat.name} ?"}, class: 'text-danger' %>
    </div>
  </div>
</div>
